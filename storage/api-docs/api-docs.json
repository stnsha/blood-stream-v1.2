    "paths": {
        "/api/register": {
            "post": {
                "tags": [
                    "LabCredential"
                ],
                "summary": "Register a new lab credential",
                "description": "Creates a user and a lab credential using email and lab ID.",
                "operationId": "a718f172ff3ac464d723835815f8fb57",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "lab_id"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "labuser@example.com"
                                    },
                                    "lab_id": {
                                        "type": "integer",
                                        "example": 1
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Lab credential successfully created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Lab credential successfully created."
                                        },
                                        "username": {
                                            "type": "string",
                                            "example": "LAB001use"
                                        },
                                        "password": {
                                            "type": "string",
                                            "example": "randompass123"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "LabCredential",
            "description": "LabCredential"
        }
    ],
    "components": {
        "securitySchemes": {
            "apiKeyAuth": {
                "type": "apiKey",
                "in": "header",
                "name": "Authorization",
                "description": "Pass your API key in the Authorization header. Example: `Authorization: {apiKey}`"
            }
        }
    },
    "security": [
        {
            "apiKeyAuth": []
        }
    ]
}